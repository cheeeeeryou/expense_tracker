<a href="./records/new">新增一筆支出</a>

<div>{{total}}</div>

<ul>
  {{#each records}}
  <li>
    {{this.name}}
    {{this.date}}
    {{this.categoryId}}
    {{this.amount}}
    <a href="./records/{{ this._id }}/edit">edit</a>
    <form action="./records/{{ this._id }}/delete" method="POST" style="display: inline;">
      <button type="submit">delete</button>
    </form>
  </li>
  {{/each}}
</ul>