<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">登入</h1>
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="password">
        </div>
        <button type="submit" class="btn btn-light btn-block">登入</button>
      </form>
      <p class="lead mt-4">
        <a href="/users/register" class="btn-outline-secondary">立即註冊</a>
      </p>
    </div>
  </div>
</div>