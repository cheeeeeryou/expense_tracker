<form action="/records/{{ record._id }}/edit" method="POST">
  <input type="text" placeholder="name" name="name" value="{{ record.name }}">
  <input type="date" placeholder="date" name="date" value="{{ record.date }}">
  <input type="number" placeholder="category" name="categoryId" value="{{ record.categoryId }}">
  <input type="number" placeholder="amount" name="amount" value="{{ record.amount }}">
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>